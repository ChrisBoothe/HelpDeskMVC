@model HelpDeskMVC.Models.Ticket

@{
    ViewBag.Title = "Close";
}

<h3>Closing Comments for Ticket # @Html.DisplayFor(model => model.TicketNumber) : @Html.DisplayFor(model => model.Summary)</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TicketGuid)
        @Html.HiddenFor(model => model.TicketNumber)
        @Html.HiddenFor(model => model.Summary)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.CreationDate)
        @Html.HiddenFor(model => model.Creator)
        @Html.HiddenFor(model => model.TicketPriority)
        
        
        @Html.TextAreaFor(model => model.ClosingComments, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ClosingComments, "", new { @class = "text-danger" })
        
    </div>
    <br />
    <p>
        <input type="button" class="btn-sm btn-default" value="Back to Details" onclick="location.href='@Url.Action("Details", "Home", new { id = Model.TicketGuid })'" />
        <input type="submit" value="Finish and Close Ticket" class="btn-sm btn-primary" />
    </p>
 }
